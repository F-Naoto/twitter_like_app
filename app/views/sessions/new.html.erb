<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local:true ) do |f|%>
<%= f.label :email %>
<%= f.email_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :remember_me, 'remember_me' %>
<%= f.check_box :remember_me %>
 <span>Remember me on this computer</span>
 
<%= f.submit "ログイン" %>

<% end %>